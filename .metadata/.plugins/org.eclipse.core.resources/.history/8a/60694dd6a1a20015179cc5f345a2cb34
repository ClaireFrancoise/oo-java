
public class Media {
	public static void main(String[] args){
		double[] arrays = new double[]{1, 1, 3, -3};
		double res = totale(arrays);
		System.out.println(res);
	}
	static double totale(double a){
		 double m = 0;
		    for(int i = 0; i < a.length-1; i++){
		       m = m + a[i];
		    }
		    return m/a.length;
	}
}
